//Implementation of this keyword to pass as argument in the constructor call.
class Person {

    // Instance variables
    String name;
    int age;

    // Constructor 1: Accepts no parameters
    public Person() {
        // Calls Constructor 2 using this keyword, passing default values
        this("Default Name", 25);
        System.out.println("No-argument constructor called.");
    }

    // Constructor 2: Accepts name and age parameters
    public Person(String name, int age) {
        this.name = name;  // Use 'this' to refer to instance variables
        this.age = age;
        System.out.println("Constructor with parameters called: " + name + ", " + age);
    }

    // Method to display object information
    public void displayInfo() {
        System.out.println("Name: " + name + ", Age: " + age);
    }

    public static void main(String[] args) {
        // Creating an object using the no-argument constructor
        Person person = new Person();
        person.displayInfo(); // Displaying information of the current object

        // Creating another object using the parameterized constructor
        Person person2 = new Person("Alice", 30);
        person2.displayInfo(); // Displaying information of the second object
    }
}
