//Write a java program to observe the utility of public access specifier.
// File: MainClass.java
import school.Student;  // Import the Student class from school package

public class MainClass {
    public static void main(String[] args) {
        // Create an object of the Student class
        Student student = new Student("Alice");

        // Accessing the public variable directly
        System.out.println("Accessing public variable directly: " + student.name);

        // Accessing the public method
        student.display();
    }
}
